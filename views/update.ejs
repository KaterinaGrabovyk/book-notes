<%-include("partials/header.ejs") %>
<div class="addForm">
  <form action="/update/<%= book.id%>" method="post">
    <h3>Book title</h3>
    <input
      class="title"
      type="text"
      name="title"
      placeholder="title"
      max="100"
      value="<%= book.title %>"
      required
    />
    <h3>Book author</h3>
    <input
      class="author"
      type="text"
      name="author"
      placeholder="author"
      max="100"
      value="<%= book.author %>"
      required
    />
    <div>
      <div>
        <h3>Rating</h3>
        <input
          class="rating"
          type="number"
          name="rating"
          min="0"
          max="10"
          value="<%= book.rating %>"
          required
        />
      </div>
      <div>
        <h3>ISBN</h3>
        <input
          class="isbn"
          type="number"
          name="isbn"
          value="<%= book.isbn %>"
          required
        />
        <% if(locals.errorISBN) {%>
        <span style="color: red"><%= errorISBN %></span>
        <% } %>
      </div>
    </div>
    <textarea
      class="text"
      type="text"
      name="note"
      placeholder="note..."
      required
    >
<%= book.note%></textarea
    >
    <button type="submit">Ok</button>
  </form>
</div>
